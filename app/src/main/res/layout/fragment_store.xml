<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.store_screen.StoreFragment">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="35dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/line_15"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="340dp"
                android:layout_height="1dp"

                android:background="@android:color/darker_gray"/>


            <ImageView
                android:id="@+id/coin_15"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/coins" />

            <TextView
                android:id="@+id/text_15"
                android:layout_marginTop="10dp"
                android:layout_marginStart="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15"
                android:textSize="27sp"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_15"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+15"
                android:textSize="24sp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="10dp"
                app:rippleColor="#33AAAAAA"
                app:strokeColor="@color/purple_500"
                app:strokeWidth="2dp" />
        </RelativeLayout>



        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/line_25"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="340dp"
                android:layout_height="1dp"

                android:background="@android:color/darker_gray"/>


            <ImageView
                android:id="@+id/coin_25"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/coins" />

            <TextView
                android:id="@+id/text_25"
                android:layout_marginTop="10dp"
                android:layout_marginStart="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25"
                android:textSize="27sp"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_25"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+25"
                android:textSize="24sp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="10dp"
                app:rippleColor="#33AAAAAA"
                app:strokeColor="@color/purple_500"
                app:strokeWidth="2dp" />
        </RelativeLayout>





        <RelativeLayout
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/line_35"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="340dp"
                android:layout_height="1dp"

                android:background="@android:color/darker_gray"/>


            <ImageView
                android:id="@+id/coin_35"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/coins" />

            <TextView
                android:id="@+id/text_35"
                android:layout_marginTop="10dp"
                android:layout_marginStart="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="35"
                android:textSize="27sp"/>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_35"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true"
                style="?attr/materialButtonOutlinedStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+35"
                android:textSize="24sp"
                app:backgroundTint="@android:color/transparent"
                app:cornerRadius="10dp"
                app:rippleColor="#33AAAAAA"
                app:strokeColor="@color/purple_500"
                app:strokeWidth="2dp" />
        </RelativeLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>